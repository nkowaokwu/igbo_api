{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "ignore": [
          "node_modules",
          ".git",
          "firebase-debug.log",
          "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
      "source": "**",
      "function": "api",
      "region": "us-central1"
    }],
    "headers": [
      {
        "source": "/",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=302400, s-maxage=604800"
          }
        ]
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9709
    },
    "functions": {
      "port": 8848
    },
    "firestore": {
      "port": 8455
    },
    "hosting": {
      "port": 5061
    },
    "ui": {
      "enabled": false
    },
    "pubsub": {
      "port": 8088
    }
  }
}