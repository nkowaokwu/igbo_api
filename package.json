{
  "name": "igbo-dictionary",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "prestart:database": "[ ! -d \"./db\" ] && mkdir ./db || echo 'Database directory exists'",
    "start:database": "mongod --dbpath ./db",
    "start:server": "NODE_ENV=dev nodemon --exec babel-node -- ./src/server.js",
    "build": "rm -rf build/ && babel -d build/ ./src -s && NODE_ENV=build yarn build:dictionaries",
    "start": "yarn build && node ./build/server.js",
    "dev": "npm-run-all -p start:database start:server",
    "build:dictionaries": "babel-node src/dictionaries/parseAndBuild.js",
    "precommit": "lint-staged",
    "mocha": "NODE_ENV=test mocha -r esm ./tests",
    "test": "npm-run-all -p start:database mocha",
    "clean": "rm -rf node_modules/ build/ yarn.lock package-lock.json *.log"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint"
    ]
  },
  "author": "Ijemma Onwuzulike",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.7",
    "node-html-parser": "^1.2.20",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.2",
    "unicharadata": "^9.0.0-alpha.6",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.10.0",
    "esm": "^3.2.25",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  }
}
