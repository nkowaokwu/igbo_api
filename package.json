    "prop-types": "^15.7.2",
    "query-string": "^7.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebase-hooks": "^5.1.1",
    "react-hook-form": "^7.50.1",
    "react-i18next": "^11.15.3",
    "react-icons": "^5.0.1",
    "react-json-pretty": "^2.2.0",
    "react-scroll": "^1.8.1",
    "redis": "^4.3.1",
    "rimraf": "^3.0.2",
    "sharp": "^0.32.5",
    "shelljs": "^0.8.4",
