{
  "name": "igbo-dictionary",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "build": "rm -rf build/ && ./node_modules/.bin/babel -d build/ ./src -s && NODE_ENV=build yarn build:dictionaries",
    "build:dictionaries": "babel-node src/dictionaries/buildDictionaries.js",
    "clean": "rm -rf node_modules/ build/ yarn.lock package-lock.json *.log",
    "dev": "npm-run-all -p start:database start:server",
    "mongodump": "rm -rf dump/ && mongodump -d igbo_api -o dump",
    "mocha": "NODE_ENV=test mocha -r esm ./tests",
    "precommit": "lint-staged",
    "prestart:database": "[ ! -d \"./db\" ] && mkdir ./db || echo 'Database directory exists'",
    "start": "node ./build/server.js",
    "dev:site": "NODE_ENV=development npx next",
    "start:server": "NODE_ENV=development nodemon --exec babel-node -- ./src/server.js",
    "start:database": "mongod --dbpath ./db",
    "test": "npm-run-all -p -r start:database mocha"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint"
    ]
  },
  "author": "Ijemma Onwuzulike",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.12.1",
    "@zeit/next-css": "^1.0.1",
    "autoprefixer": "^9.8.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.7",
    "next": "^9.5.5",
    "nodemon": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-json-pretty": "^2.2.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "string-similarity": "^4.0.2",
    "swagger-jsdoc": "^4.3.0",
    "swagger-ui-express": "^4.1.4",
    "tailwindcss": "^1.9.5",
    "unicharadata": "^9.0.0-alpha.6",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.3",
    "esm": "^3.2.25",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.3",
    "postcss-loader": "~3.0.0",
    "postcss-preset-env": "^6.7.0"
  },
  "optionalDependencies": {
    "win-node-env": "^0.4.0"
  }
}
