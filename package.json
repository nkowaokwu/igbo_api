{
  "name": "igbo-dictionary",
  "version": "1.0.0",
  "description": "Dictionary API that contains Igbo words",
  "main": "server.js",
  "scripts": {
    "build": "shx rm -rf build/ && ./node_modules/.bin/babel -d build/ ./src -s && cross-env NODE_ENV=build yarn build:dictionaries && yarn build:site",
    "build:dictionaries": "babel-node src/dictionaries/buildDictionaries.js",
    "build:site": "next build && next export -o build/dist && yarn build:fonts && yarn build:assets",
    "build:fonts": "shx cp -r ./src/pages/fonts/ ./build/dist/fonts",
    "build:assets": "shx cp -r ./src/pages/assets/ ./build/dist/assets",
    "clean": "shx rm -rf node_modules/ build/ yarn.lock package-lock.json *.log",
    "dev": "npm-run-all -p start:database start:server",
    "migrate-up": "migrate-mongo up",
    "migrate-down": "migrate-mongo down",
    "heroku-postbuild": "NODE_ENV=production yarn build && npm-run-all -p -r start migrate-up",
    "mongodump": "shx rm -rf dump/ && mongodump -d igbo_api -o dump",
    "mocha": "cross-env NODE_ENV=test mocha --timeout 60000 --retries 3 -r esm ./tests",
    "precommit": "lint-staged",
    "prestart:database": "shx [ ! -d \"./db\" ] && mkdir ./db || echo 'Database directory exists'",
    "start": "node ./build/server.js",
    "test:build": "NODE_ENV=build yarn start",
    "dev:site": "cross-env NODE_ENV=development next",
    "start:server": "cross-env NODE_ENV=development nodemon --exec babel-node -- ./src/server.js",
    "start:database": "mongod --dbpath ./db",
    "test": "npm-run-all -p -r start:database mocha"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint"
    ]
  },
  "author": "Ijemma Onwuzulike",
  "license": "ISC",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@sendgrid/mail": "^7.4.0",
    "@zeit/next-css": "^1.0.1",
    "autoprefixer": "^9.8.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "diacriticless": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "heroku-ssl-redirect": "^0.1.1",
    "lodash": "^4.17.20",
    "migrate-mongo": "^8.1.4",
    "mongoose": "^5.10.7",
    "next": "^9.5.5",
    "nodemon": "^2.0.4",
    "prop-types": "^15.7.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-json-pretty": "^2.2.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "string-similarity": "^4.0.2",
    "swagger-ui-express": "^4.1.4",
    "tailwindcss": "^1.9.5",
    "unicharadata": "^9.0.0-alpha.6",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-react-jsx": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@svgr/webpack": "^5.4.0",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.10.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.3",
    "esm": "^3.2.25",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.3",
    "postcss-loader": "~3.0.0",
    "postcss-preset-env": "^6.7.0",
    "shx": "^0.3.3"
  }
}
