    "express": "4.17.1",
    "express-rate-limit": "^5.2.3",
    "firebase": "^10.12.2",
    "firebase-admin": "^12.1.1",
    "firebase-functions": "^5.0.1",
    "firebase-tools": "^13.8.0",
    "framer-motion": "^5",
    "i18next": "^21.6.5",
    "is-word": "^1.0.4",
    "jest": "29.2.2",
    "joi": "^17.4.0",
    "jotai": "^2.7.1",
    "lodash": "^4.17.20",
    "mic-recorder-to-mp3": "^2.2.2",
    "migrate-mongo": "^8.1.4",
    "mongoose": "^6.7.0",
    "morgan": "^1.10.0",
    "next": "13.4.5",
    "next-i18next": "10.1.0",
    "next-react-svg": "1.1.3",
    "node-cron": "^2.0.3",
