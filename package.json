{
  "name": "igbo-api",
  "version": "1.22.4",
  "description": "Igbo Dictionary API contains Igbo words, definitions, and examples",
  "main": "server.js",
  "scripts": {
    "build": "shx rm -rf build/ && yarn build:src && cross-env NODE_ENV=build yarn build:dictionaries && yarn build:site",
    "build:src": "./node_modules/.bin/babel -d build/ ./src -s",
    "build:dictionaries": "babel-node src/dictionaries/buildDictionaries.js",
    "build:site": "NEXT_PUBLIC_GA_ID=$NEXT_PUBLIC_GA_ID next build && yarn build:fonts && yarn build:assets",
    "build:fonts": "shx cp -r ./src/public/fonts/ ./build/dist/fonts",
    "build:assets": "shx cp -r ./src/pages/assets/ ./build/dist/assets",
    "clean": "shx rm -rf node_modules/ build/ out/ yarn.lock package-lock.json *.log",
    "dev": "npm-run-all -p start:database start:server",
    "dev:full": "cross-env REPLICA_SET=true npm-run-all -p start:database:replica start:server",
    "migrate-up": "migrate-mongo up",
    "migrate-down": "migrate-mongo down",
    "heroku-postbuild": "NODE_ENV=production yarn build && npm-run-all -p -r start migrate-up",
    "mongodump": "shx rm -rf dump/ && mongodump -d igbo_api -o dump",
    "mocha": "cross-env NODE_ENV=test mocha --require @babel/register --timeout 10000 --retries 2 ./tests",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "cypress": "cross-env NODE_ENV=test CLIENT_TEST=true npm-run-all -p start start:database cypress:open",
    "cypress:ci": "cross-env NODE_ENV=test CLIENT_TEST=true npm-run-all -p -r start cypress:run",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "precommit": "lint-staged",
    "prestart:database": "[ ! -d \"./db\" ] && shx mkdir ./db || echo 'Database directory exists'",
    "prestart:database:replica": "[ ! -d \"./mongos\" ] && shx mkdir ./mongos || echo 'Parent database directory exists'",
    "prestart:database:primary": "[ ! -d \"./mongos/db1\" ] && shx mkdir ./mongos/db1 || echo 'Primary database directory exists'",
    "prestart:database:secondary:first": "[ ! -d \"./mongos/db2\" ] && shx mkdir ./mongos/db2 || echo 'First secondary database directory exists'",
    "prestart:database:secondary:second": "[ ! -d \"./mongos/db3\" ] && shx mkdir ./mongos/db3 || echo 'Second secondary database directory exists'",
    "start": "node ./build/server.js",
    "start:docker": "docker-compose up",
    "test:build": "NODE_ENV=build yarn start",
    "dev:site": "cross-env NODE_ENV=development next",
    "start:server": "cross-env NODE_ENV=development nodemon --delay 500ms --exec babel-node -- ./src/server.js",
    "start:database": "mongod --port 27017 --dbpath ./db",
    "start:database:replica": "npm-run-all -p start:database:primary start:database:secondary:first start:database:secondary:second",
    "start:database:primary": "mongod --port 2717 --dbpath ./mongos/db1 --replSet rs0 ",
    "start:database:secondary:first": "mongod --port 2727 --dbpath ./mongos/db2 --replSet rs0 ",
    "start:database:secondary:second": "mongod --port 2737 --dbpath ./mongos/db3 --replSet rs0 ",
    "test": "npm-run-all -p -r start:database mocha"
  },
  "engines": {
    "node": ">=14 <=16",
    "npm": "6.x",
    "yarn": "1.22.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn precommit",
      "commit-msg": "yarn commit-msg"
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/eslint"
    ]
  },
  "author": "Ijemma Onwuzulike",
  "license": "ISC",
  "dependencies": {
    "@chakra-ui/icons": "^1.1.1",
    "@chakra-ui/react": "^1.7.4",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-regular": "^5.0.13",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.16",
    "@material-ui/core": "^4.11.0",
    "@sendgrid/mail": "^7.4.0",
    "@testing-library/cypress": "^7.0.3",
    "antd": "^4.14.0",
    "autoprefixer": "^9.8.6",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "diacriticless": "^1.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.3",
    "framer-motion": "^5",
    "heroku-ssl-redirect": "^0.1.1",
    "i18next": "^21.6.5",
    "joi": "^17.4.0",
    "lodash": "^4.17.20",
    "migrate-mongo": "^8.1.4",
    "mongoose": "^5.10.7",
    "morgan": "^1.10.0",
    "next": "12.0.7",
    "next-i18next": "^10.1.0",
    "next-react-svg": "^1.1.3",
    "node-cron": "^2.0.3",
    "nodemon": "^2.0.4",
    "prop-types": "^15.7.2",
    "query-string": "^7.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-fade-in": "^1.1.1",
    "react-hook-form": "^6.13.1",
    "react-i18next": "^11.15.3",
    "react-json-pretty": "^2.2.0",
    "react-reveal": "^1.2.2",
    "react-scroll": "^1.8.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "string-similarity": "^4.0.2",
    "swagger-ui-express": "^4.1.4",
    "tailwindcss": "3",
    "unicharadata": "^9.0.0-alpha.6",
    "uuid": "^8.3.2",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-syntax-jsx": "^7.12.1",
    "@babel/plugin-transform-react-jsx": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.2",
    "cypress": "^6.0.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.3",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.3",
    "postcss-loader": "~3.0.0",
    "postcss-preset-env": "^6.7.0",
    "shx": "^0.3.3"
  },
  "standard-version": {
    "skip": {
      "changelog": true,
      "tag": true
    }
  }
}
