        "security": [
          { "ApiKeyAuth": [] }
        ],
        "description": "Get examples in dictionary",
        "tags": ["Production"],
        "parameters": [
          {
            "name": "keyword",
            "description": "Keyword for querying examples",
            "in": "query",
            "required": false
          },
          {
            "name": "page",
            "description": "Page for results",
