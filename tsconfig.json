{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "ESNext",
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["jest", "node"]
  },
  "include": ["./src/**/*", "@types", "env.d.ts"],
  "exclude": ["node_modules"]
}
